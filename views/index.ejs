<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" type="text/stylesheet" href="/css/main.css">
    <link rel="stylesheet" type="text/stylesheet" href="/css/login.css">
    <title>User Dashbord - SaveUp</title>
</head>

<body>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700;900&display=swap');

        :root {
            --primary-color: #0EDE73;
            --primary-font: 'Poppins', sans-serif;
        }

        * {
            font-family: var(--primary-font);
            font-weight: 300;
        }

        .btn {
            text-transform: uppercase;
        }

        .btn-primary,
        .btn-primary:hover,
        .btn-primary:focus {
            background-color: var(--primary-color) !important;
            border-color: var(--primary-color) !important;
        }

        .text-primary {
            color: var(--primary-color) !important;
        }
    </style>
    <div class="modal" id="setgoalmodal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Set New Goal</h5>
                </div>
                <div class="modal-body">
                    <form id="set-goal-form">
                        <div class="mb-3">
                            <label for="name">Name *</label>
                            <input type="text" class="form-control shadow-none" id="name" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="amount">Target Amount (KES) *</label>
                            <input type="number" class="form-control shadow-none" id="amount" name="amount" required>
                        </div>
                        <div class="mb-3">
                            <label for="frequency">Frequency *</label>
                            <select class="form-control shadow-none" id="frequency" name="frequency" required>
                                <option selected value="Daily">Daily</option>
                                <option value="Weekly">Weekly</option>
                                <option value="Monthly">Monthly</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <input type="checkbox" id="include-weekends">
                            <label for="include-weekends">Include Weekends</label>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="submit-set-goal-btn" class="btn btn-primary">Submit <div
                            class="spinner-border spinner-border-sm ms-2 d-none"></div></button>
                    <button type="button" id="close-set-goal-modal" class="btn btn-secondary"
                        data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal" id="savetogoalmodal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Save to goal</h5>
                </div>
                <div class="modal-body">
                    <form id="save-to-goal-form">
                        <div class="mb-3">
                            <label for="amount">Target Amount (KES) *</label>
                            <input type="number" class="form-control shadow-none" id="amount" name="amount" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="submit-save-to-goal-btn" class="btn btn-primary">Submit <div
                            class="spinner-border spinner-border-sm ms-2 d-none"></div></button>
                    <button type="button" id="close-save-to-goal-modal" class="btn btn-secondary"
                        data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex align-items-center justify-content-center">
        <div class="card w-75">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <img src="/images/saveuplogo.png" alt="" width="100px" height="100px">
                    <div>
                        <button id="set-goal-btn" class="btn btn-sm me-2 btn-primary">+ set new goal</button>
                        <a href="/transactions.html" class="btn btn-sm btn-dark me-2">View Transactions</a>
                        <a href="/logout" class="btn btn-sm btn-danger">Log Out</a>
                    </div>
                </div>
                <h6 class="mb-2 mt-2">Welcome, <span id="username" class="fw-bold">
                        <%= user.first_name + ' ' + user.last_name %>
                    </span></h6>
                <table id="goals-container" class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Goal</th>
                            <th>Amount (KES)</th>
                            <th>Progress (KES)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="4" class="text-center">
                                <div class="spinner-border"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
        integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
    <!-- <script type="text/javascript" src="/js/constants.js"></script> -->
    <script type="text/javascript" src="/js/setgoal.js"></script>
    <script type="text/javascript" src="/js/savetogoal.js"></script>
    <script>
        const goalsContainer = document.querySelector('#goals-container tbody');
        const goals = [];
        const getGoals = async () => {
            const response = await fetch('/savings/get', {
                // headers: { 'Authorization': `Bearer ${localStorage.getItem('token')}` }
                credentials: 'include'
            });
            const jsonRes = await response.json();
            goalsContainer.innerHTML = '';
            jsonRes.data.forEach(goal => {
                goals.push(goal);
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td>${goal.name}</td>
                    <td>${goal.amount.toLocaleString('en-US')}</td>
                    <td>${goal.amount_saved.toLocaleString('en-US')}</td>
                    <td>
                        <button data-goal-id="${goal.id}" class="btn btn-sm btn-dark save-to-goal-btn me-2">Save</button>
                        <a href="/transactions/view/${goal.id}" class="btn btn-sm btn-dark save-to-goal-btn me-2">View Transactions</a>
                    </td>
                `;
                goalsContainer.appendChild(tr);
            });

            if (jsonRes.data.length === 0) {
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td colspan="4" class="text-center">No goals set</td>
                `;
                goalsContainer.appendChild(tr);
            }
        }
        getGoals();

        const setGoalForm = document.querySelector('#set-goal-form');
        const setGoalBtn = document.querySelector('#set-goal-btn');

        setGoalBtn.addEventListener('click', () => {
            $('#setgoalmodal').modal('show');
        });

    </script>
</body>

</html>